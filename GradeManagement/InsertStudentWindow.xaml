<Window x:Class="GradeManagement.InsertStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeManagement"
        mc:Ignorable="d"
        Title="Student Detail"
        Height="550" Width="600"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Grid Background="#F9F9F9" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form content -->
        <Border Grid.Row="0" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Student Information"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,20"/>

                    <Label Content="Student Name" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtName" Height="30" Margin="0,0,0,10"/>

                    <Label Content="Email" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,10"/>

                    <Label Content="Roll Number" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtRollNumber" Height="30" Margin="0,0,0,10"/>

                    <Label Content="Date of Birth" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpDOB" Height="30" Margin="0,0,0,10"/>

                    <Label Content="Course" FontWeight="SemiBold" Margin="0,10,0,5"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="130">
                        <ItemsControl x:Name="lbSubjects">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Subject.SubjectId}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Margin="5" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Save button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button 
                    Content="💾 Save"
                    Width="100"
                    Height="35"
                    Background="#2ECC71"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderBrush="Transparent"
                    Click="btnSave"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
