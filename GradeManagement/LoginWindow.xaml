<Window x:Class="GradeManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeManagement"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Label Content="Login" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Label Content="Username:" Margin="0,5,0,0"/>
            <TextBox Height="25" Margin="0,0,0,10"/>
            <Label Content="Password:" Margin="0,5,0,0"/>
            <PasswordBox Height="25" Margin="0,0,0,20"/>
            <Button Content="Login" Height="30" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>