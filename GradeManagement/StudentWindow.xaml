<Window x:Class="GradeManagement.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeManagement"
        mc:Ignorable="d"
        Title="StudentWindow" Height="450" Width="800" Loaded="Window_Loaded"  WindowState="Maximized"
        WindowStyle="SingleBorderWindow"   
    ResizeMode="CanResize" FontFamily="Arial">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="291*"></ColumnDefinition>
            <ColumnDefinition Width="109*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <StackPanel Background="#FFE5CBCB">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <!-- Fix: Replace 'PlaceholderText' with 'ToolTip' as WPF TextBox does not support 'PlaceholderText' -->
                <!-- Fix: Replace 'PlaceholderText' with 'ToolTip' as WPF TextBox does not support 'PlaceholderText' -->
                <TextBox x:Name="txtSearch" Width="200" ToolTip="Search by Name or StudentID" FontFamily="Arial" Margin="0,0,0,2" VerticalAlignment="Center" Height="24"/>
                <Button x:Name="btnSearch" Content="Search" Click="btnSearch_Click" Width="80" Margin="10,0,0,0" Background="#FF64DCF6" VerticalAlignment="Center"/>
                <Button x:Name="btnRefesh" Content="Refesh" Click="btnRefesh_Click" Width="80" Background="#FF64DCF6" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
            <DataGrid x:Name="dgStudents" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="dgStudents_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="StudentID" Binding="{Binding StudentId}"></DataGridTextColumn>
                    <DataGridTextColumn Header="FullName" Binding="{Binding FullName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Dob" Binding="{Binding Dob}"></DataGridTextColumn>
                    <DataGridTextColumn Header="RollNumber" Binding="{Binding RollNumber}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Course" Binding="{Binding ClassCodesWithSubjectId}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button x:Name="btNewStudent" Grid.Column="1" Content="ADD NEW STUDENT" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" Height="26" Width="136" Background="#FF749FD2" Click="Button_Click_Addnew"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="1" Background="#FFE31616" TextAlignment="Center" RenderTransformOrigin="0.481,0.796" Height="26" VerticalAlignment="Top" Foreground="#FFE8F408" FontSize="18" Text="GRADE MANAGEMENT"/>
        <Button x:Name="Bt_Grade" Grid.Column="1" Content="Grade for student" HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top" Width="136" Height="27" Background="#FF749FD2" Click="Bt_Grade_Click"/>
        <Button x:Name="Bt_Logout" Grid.Column="1" Content="Thoát" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Width="136" Height="27" Background="#FF749FD2" Click="Bt_StudentGrade_Click"/>
    </Grid>
</Window>