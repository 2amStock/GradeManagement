<Window x:Class="GradeManagement.GradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeManagement"
        mc:Ignorable="d"
        Title="GradeWindow" Height="450" Width="800" WindowStyle="SingleBorderWindow" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="559*"></ColumnDefinition>
            <ColumnDefinition Width="241*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
            <StackPanel>
            <ComboBox x:Name="cbCourses" SelectionChanged="dgCourse_SelectionChanged">
                
            </ComboBox>
            <DataGrid x:Name="dgStudentGrades" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" SelectionChanged="dgStudentGrades_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="100" Header="FullName" Binding="{Binding FullName }" ></DataGridTextColumn>
                    <DataGridTextColumn Width="100" Header="RollNumber" Binding="{Binding RollNumber}"></DataGridTextColumn>
                    
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel Grid.Column="1"  >
            

            <TextBlock Text="Grade Details" FontSize="20" Width="240" Height="31" TextAlignment="Center" Background="#FF82C3FE"/>
            <StackPanel x:Name="spGradeItemDetails" Margin="10" >
                <!-- Các Label + TextBox sẽ được thêm động ở đây -->
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnSave" Content="Save" Width="69" Height="30"  Background="#FFF11010" Margin="0,0,10,0" Click="btnSave_Click"/>
                <Button x:Name="btnRefesh" Content="Refesh" Width="69" Height="30"  Background="#FF14F1F1" Click="btnRefesh_Click"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
