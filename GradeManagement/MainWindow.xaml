<Window x:Class="GradeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeManagement"
        mc:Ignorable="d"
        Title="Grade Management System" Height="850" Width="1000"
        FontFamily="Segoe UI" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" WindowState="Maximized">
    <Grid Margin="10" Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Class Selection -->
        <TextBlock Text="Grade System" FontSize="30" FontWeight="Bold" Foreground="#FFF30606"></TextBlock>

        <!-- Main Tabs -->
        <TabControl Grid.Row="1">
            <!-- Grade Management -->
            <TabItem Header="📝 Grade Management">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel -->
                    <StackPanel Grid.Column="0">
                        <!-- Course selection -->
                        <ComboBox x:Name="cbCourses" Height="30" Margin="0,0,0,10" SelectionChanged="cbCourses_SelectionChanged"
                                  />

                        <!-- Search box -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox x:Name="txtSearchStudent"
                                     Width="220" Height="30"
                                     
                                     ToolTip="Search student"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,10,0"/>
                            <Button Content="Search"
                                    Height="30" Width="80"
                                    Background="#3498DB" Foreground="White"
                                   />
                        </StackPanel>

                        <!-- DataGrid -->
                        <DataGrid x:Name="dgStudentGrades"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  IsReadOnly="True"
                                  
                                  AlternatingRowBackground="#F0F0F0" SelectionChanged="dgStudentGrades_SelectionChanged_1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Full Name" Width="120" Binding="{Binding FullName}"/>
                                <DataGridTextColumn Header="Roll Number" Width="90" Binding="{Binding RollNumber}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Grade Detail Panel -->
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="Grade Details" FontSize="18" FontWeight="Bold" Background="#E3F2FD"
                                   Padding="8" Margin="0,0,0,10" TextAlignment="Center"/>

                        <StackPanel x:Name="spGradeItemDetails" Margin="0,0,0,10" />

                        <!-- Action buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="btnSave" Content="Save" Width="60" Margin="5"
                                    Background="#27AE60" Foreground="White" Click="btnSave_Click" />
                            <Button x:Name="btnExport" Content="Export" Width="60" Margin="5" Click="btnExport_Click"
                                    />
                            <Button x:Name="btnImport" Content="Import" Width="60" Margin="5" Click="btnImport_Click"
                                    />
                            <Button x:Name="btnRefesh" Content="Refresh" Width="60" Margin="5"
                                    Background="#17A2B8" Foreground="White" Click="btnRefesh_Click" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>


        </TabControl>

        <!-- Total Students -->
        <TextBlock x:Name="StudentCountTextBlock"
                   Grid.Row="2"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Text="Total Students: 0"
                   Margin="0,5,0,0"/>
        <Button Grid.Row="2" x:Name="LogoutButton"
        Content="🚪 Logout"
        Background="#E74C3C" Foreground="White" Margin="870,5,10,4" Width="100"
                Click="ButtonLogout_Click"
       />
    </Grid>
</Window>
